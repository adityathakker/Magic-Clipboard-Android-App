<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adityathakker.copyactions.ui.activities.BuiltInActionsWordActivity"
    tools:showIn="@layout/activity_built_in_actions_word">

    <RelativeLayout
        android:id="@+id/content_built_in_actions_word_relative_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/content_built_in_actions_word_action_search_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/ic_search_black_48dp" />

        <TextView
            android:id="@+id/content_built_in_actions_word_action_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/content_built_in_actions_word_action_search_icon"
            android:layout_toRightOf="@id/content_built_in_actions_word_action_search_icon"
            android:text="Search"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/content_built_in_actions_word_action_search_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:id="@+id/content_built_in_actions_word_relative_layout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/content_built_in_actions_word_action_share_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/ic_share_black_48dp" />

        <TextView
            android:id="@+id/content_built_in_actions_word_action_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/content_built_in_actions_word_action_share_icon"
            android:layout_toRightOf="@id/content_built_in_actions_word_action_share_icon"
            android:text="Share"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/content_built_in_actions_word_action_share_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:id="@+id/content_built_in_actions_word_relative_layout_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/content_built_in_actions_word_action_maps_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/ic_near_me_black_48dp" />

        <TextView
            android:id="@+id/content_built_in_actions_word_action_maps_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/content_built_in_actions_word_action_maps_icon"
            android:layout_toRightOf="@id/content_built_in_actions_word_action_maps_icon"
            android:text="Search On Maps"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/content_built_in_actions_word_action_maps_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:id="@+id/content_built_in_actions_word_relative_layout_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/content_built_in_actions_word_action_translate_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/ic_translate_black_48dp" />

        <TextView
            android:id="@+id/content_built_in_actions_word_action_translate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/content_built_in_actions_word_action_translate_icon"
            android:layout_toRightOf="@id/content_built_in_actions_word_action_translate_icon"
            android:text="Translate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/content_built_in_actions_word_action_translate_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:id="@+id/content_built_in_actions_word_relative_layout_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/content_built_in_actions_word_action_speak_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/ic_volume_up_black_48dp" />

        <TextView
            android:id="@+id/content_built_in_actions_word_action_speak_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/content_built_in_actions_word_action_speak_icon"
            android:layout_toRightOf="@id/content_built_in_actions_word_action_speak_icon"
            android:text="Speak"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/content_built_in_actions_word_action_speak_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

</LinearLayout>
